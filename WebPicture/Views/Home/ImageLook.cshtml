@{
    var items = ViewData["img"] as List<Item>;
}
<style>
    .txt {
        display: flex;
        justify-content: space-around;
        font-size: 16px;
    }

        .txt a {
            text-decoration: none;
            color: #000;
        }

            .txt a:hover {
                text-decoration: none !important;
                color: #5B5B5B !important;
            }
</style>


<div class="container-md">
    <div class="row align-items-start">
        <div class="col">
            <figure class="figure">
                <img src="@items[0].url" class="figure-img img-fluid rounded dialog" alt="..." style="width:600px; height:400px">
                <div id="img_large" style="display:none; text-align:center;  position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.7);">
                    <img id="large_image" src="" alt="Large Image" style="max-width: 80%; max-height: 80%; border: 3px solid #ccc; margin-top: 5%;" />
                </div>
                <figcaption class="figure-caption">@items[0].title</figcaption>
            </figure>
        </div>
        <div class="col txt">
            <a href="@items[0].url"
               download="111.jpg">下載</a>
            <a href="">儲存</a>
            <div class="a2a_kit a2a_kit_size_32 a2a_default_style"
                 data-a2a-url="@items[0].url"
                 title="分享">
                <a class="a2a_dd" href="https://www.addtoany.com/share"></a>
            </div>
        </div>
        <div class="row align-items-start">
            <div class="col">
                <div style=" float: right; position: relative; right: 50px; font-size: 12px;">
                    <span>照片格式</span><br />
                    <span>1920 </span>
                    <span>X </span>
                    <span>1079</span>
                    <span>像素</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            // 點擊圖片顯示大圖
            $(".dialog").click(function () {
                var imgSrc = $(this).attr("src"); // 取得點擊圖片的 src
                var largeImage = $('#large_image');

                // 設定大圖的 src
                largeImage.attr("src", imgSrc);

                // 顯示背景和大圖
                $('#img_large').fadeIn(300);
            });

            // 點擊大圖背景關閉
            $('#img_large').click(function () {
                $(this).fadeOut(300);
            });
        });
    </script>
}
@{
    <script defer src="https://static.addtoany.com/menu/page.js"></script>
}
